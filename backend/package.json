{
    "name": "job-automation-backend",
    "version": "1.0.0",
    "description": "Backend for Job Application Automation Platform",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest --testPathIgnorePatterns=integration,e2e,performance",
        "test:integration": "jest --testPathPattern=integration",
        "test:e2e": "jest --testPathPattern=e2e",
        "test:performance": "jest --testPathPattern=performance",
        "test:ci": "jest --coverage --ci --watchAll=false",
        "lint": "eslint src --ext .ts --fix",
        "migrate": "ts-node src/scripts/migrate.ts up",
        "migrate:down": "ts-node src/scripts/migrate.ts down",
        "db:test": "ts-node src/scripts/test-db.ts",
        "seed": "ts-node src/scripts/seed.ts",
        "add-companies": "ts-node src/scripts/addSampleCompanies.ts",
        "test-scraping": "ts-node src/scripts/testJobScraping.ts",
        "test-discovery": "ts-node src/scripts/testCompanyDiscovery.ts"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.61.0",
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.11.0",
        "bcrypt": "^5.1.1",
        "bull": "^4.12.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "openai": "^5.18.1",
        "pdf-parse": "^1.1.1",
        "pg": "^8.11.3",
        "puppeteer": "^21.5.2",
        "redis": "^4.6.10",
        "uuid": "^8.3.2",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.8.10",
        "@types/pdf-parse": "^1.1.5",
        "@types/pg": "^8.10.7",
        "@types/supertest": "^2.0.16",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "eslint": "^8.53.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "keywords": [
        "job",
        "automation",
        "backend",
        "api"
    ],
    "author": "",
    "license": "MIT"
}